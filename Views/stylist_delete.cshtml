  <body>
    <div class="container jumbotron">
      <h1>Delete a Stylist</h1>
      <hr/>
      <h2>Are you sure you want to delete this stylist and all associated clients?</h2>
      <h4>@Model.GetName()</h4>
      <form action="/stylist/delete/@Model.GetId()" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit">Delete</button>
      </form>
      <p><a href="/">Back home</a></p>
    </div>
  </body>
