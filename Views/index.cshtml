<h1>Stylists Currently at Doc Gonzo's Salon</h1>

@if (@Model.Count == 0)
{
  <p>We haven't yet hired any stylists.</p>
}
<ul>
  @foreach (var stylist in Model)
  {
    <li><a href="/stylists/@stylist.GetId()">@stylist.GetName()</a></li>
  }
</ul>


<form action="/" method="post">
  <label for="stylist-name">Name of Stylist</label>
  <input type="text" name="stylist-name">
  <label for="stylist-specialty">Specialty of Stylist</label>
  <input type="text" name="stylist-specialty">
  <button type="submit">Add this Stylist</button>
</form>
